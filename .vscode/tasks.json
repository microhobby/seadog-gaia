{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Seadog Gaia üê∂",
            "command": "./seadog-gaia",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                },
                "cwd": "${workspaceFolder}",
                "env": {
                    "SEADOG_DEV": "TEST",
                    "JOBS": "8"
                }
            },
            "args": [
                "${input:machine_board}",
                "${input:can_clean}",
                "v2021.04",
                "seadog-pi4b"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiYellow"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "binfmt"
            ]
        },
        {
            "label": "binfmt",
            "detail": "hide",
            "command": "docker",
            "type": "shell",
            "args": [
                "run",
                "--rm",
                "-it",
                "--privileged",
                "torizon/binfmt"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiYellow"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
            ]
        },
        {
            "label": "Flash SD Card üíæ",
            "command": "sync",
            "type": "shell",
            "args": [
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiYellow"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "flash-dd"
            ]
        },
        {
            "label": "flash-dd",
            "detail": "hide",
            "command": "sudo",
            "type": "shell",
            "args": [
                "dd",
                "bs=1G",
                "of=${config:sdcard_dev}",
                "if=${workspaceFolder}/dist/${input:machine_board}/${input:machine_board}-seadog-${config:seadog_version}.img",
                "status=progress"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiYellow"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
            ]
        },
    ],
    "inputs": [
        {
            "id": "machine_board",
            "type": "pickString",
            "description": "Select the target board",
            "options": [
                {
                    "label": "Raspberry Pi 3B",
                    "value": "bcm2837-rpi-3b"
                },
                {
                    "label": "Raspberry Pi 3B+",
                    "value": "bcm2837-rpi-3bp"
                },
                {
                    "label": "Raspberry Pi 4B",
                    "value": "bcm2711-rpi-4b"
                },
                {
                    "label": "Intel x86-64 Generic",
                    "value": "x86-64"
                }
            ]
        },
        {
            "id": "can_clean",
            "type": "pickString",
            "description": "Clean the build cache?",
            "options": [
                {
                    "label": "yes",
                    "value": "true"
                },
                {
                    "label": "no",
                    "value": "false"
                }
            ],
            "default": "yes"
        }
    ]
}
